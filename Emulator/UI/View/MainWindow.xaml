<Window x:Class="Emulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Emulator"
        xmlns:helpers="clr-namespace:Emulator.UI.Helpers"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight">
    
    <Image x:Name="framebuffer"
           Source="{Binding Framebuffer}"
           Focusable="True"
           FocusManager.IsFocusScope="True"
           helpers:KeyEventBinding.KeyDownCommand="{Binding KeyDownCommand}"
           helpers:KeyEventBinding.KeyUpCommand="{Binding KeyUpCommand}"
           RenderOptions.BitmapScalingMode="NearestNeighbor"
           Stretch="Uniform"     
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           Width="768"
           Height="720"/>
    
</Window>
